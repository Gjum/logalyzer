#/bin/bash

date="$1";
rm ../logs/"$date".log #remove old .log file (or else new content will be added to create an infinite logfile)

#concatenate logs for a whole day into a new .log file
for file in ../logs/"$date"*.gz; do
	gzip -dc $file >> ../logs/"$date".log
done

#create ".scanned" file of the whole day
./scan-one ../logs/"$date".log > ../logs/"$date".scanned

#output histogram
./histogram ../logs/"$date".scanned /var/www/html/minecraft/whitelist.txt
